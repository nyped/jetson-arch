# Maintainer: nyped

pkgname=cuda-cuobjdump
pkgver=10.2.300
pkgrel=1
pkgdesc="TODO"
arch=('aarch64')
url="https://repo.download.nvidia.com"
license=('custom')
makedepends=('tar')
groups=('nvidia-cuda')
options=('!strip')
cuda_version=10.2
source=(
  https://repo.download.nvidia.com/jetson/common/pool/main/c/cuda-cuobjdump/cuda-cuobjdump-10-2_10.2.300-1_arm64.deb
)
sha512sums=(
  3e33a5f81fa7aaf9da3309399d48528dd40de88e9263c71b8bd86f4fe0f876bfe6b155ac9ebf2b575695fa58bd3c62c6c86fcf22d085155c9d184e57647487c3
)

_mv() {
  source="${pkgdir}/$1" dest="${pkgdir}/$2"

  if [[ -d "$source" ]] # $1 is a dir
  then
    # moving everything
    rmdir "$source" 2>/dev/null || {
      mkdir -p "$dest"
      mv "$source"/* "$dest"
      rmdir "$source"
    }
  elif [[ -f "$source" ]] # $1 is a file
  then
    # moving the file
    mv "$source" "$dest"
  fi
}

package() {
  # Unpack the deb file
  tar xf data.tar.* --keep-directory-symlink -C "${pkgdir}"

  # Restore symlinks
  _mv /lib /usr/lib
  _mv /usr/sbin /usr/bin

  # Install licenses properly
  _mv /usr/share/doc /usr/share/licenses/$pkgname

  # Setup permission
  find "$pkgdir" \( -name \*.so -o -name \*.so.\* -o -name \*.bin -o -name \*.fw \) -exec chmod 755 '{}' ';'

  # Remove useless links
  rm -f "$pkgdir"/usr/local/cuda-${cuda_version}/{include,lib64}
}

